{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"noImplicitAny": true,
		"baseUrl": "./",
		"rootDir": "src",
		"outDir": "./dist/",
		"paths": {
			"@*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "**/*.test.*"]
}
